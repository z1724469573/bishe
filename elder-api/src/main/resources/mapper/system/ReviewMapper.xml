<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.elderapi.system.mapper.ReviewMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.elderapi.system.entity.ReviewEntity">
        <id column="review_id" property="id" />
        <result column="review_user_id" property="userId" />
        <result column="review_date" property="date" />
        <result column="review_content" property="content" />
        <result column="review_star" property="star" />
        <result column="status" property="status" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        review_id, review_user_id, review_date, review_content, review_star, status
    </sql>

</mapper>
